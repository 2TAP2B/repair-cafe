---
import Logo from './Logo.astro'

/**
 * Footer Component
 *
 * @description A simplified footer for Repair Café Xanten
 */
const currentYear = new Date().getFullYear()
---

<footer>
  <section class="py-12 border-t border-neutral-200 dark:border-neutral-800">
    <div class="container">
      <div class="flex flex-col items-center gap-6 text-center">
        <Logo loading="lazy" />
        <div class="flex flex-col gap-2 text-sm text-neutral-600 dark:text-neutral-400">
          <p>Karthaus 12, 46509 Xanten | Haus der Begegnung</p>
          <p>
            E-Mail: <a href="mailto:repaircafe-xanten@domrath.de" class="hover:text-blue-600">repaircafe-xanten@domrath.de</a>
          </p>
          <p>Telefon: 02825-3070207 | 0163-9255389</p>
        </div>
        <p class="text-xs text-neutral-500 dark:text-neutral-500">
          &copy; {currentYear} Repair Café Xanten - Gemeinsam reparieren, Wissen teilen
        </p>
      </div>
    </div>
  </section>
</footer>
